{
  "manifest_version": 3,
  "name": "Advanced Bookmarker",
  "version": "0.1.0",
  "description": "An advanced bookmarking extension with features like thumbnail/icon extraction, drag & drop organization, and import/export.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
